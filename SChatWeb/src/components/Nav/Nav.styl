.nav
  overflow hidden
  padding 0 1rem
  height 3.125rem
  text-align center
  font-size $font-size-normal
  letter-spacing .1rem
  width 100vw
  box-sizing border-box
  background #ffffff
  position relative
  .nav-left,
  .nav-right, 
  .nav-middle
    position absolute
  .nav-left
    left 1rem
    top 50%
    transform translate(0,-50%)
  .nav-middle
    left 50%
    top 50%
    transform translate(-50%,-50%)
  .nav-right
    transform translate(0,-50%)
    right 1rem
    top 50%
