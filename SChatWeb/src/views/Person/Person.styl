.person
  height 100%
  flex-direction column
  .person-portrait
    width 10rem
    height 10rem
    border-radius 50%
    margin-bottom 1.5rem
    box-shadow 0px 2px 6px 2px #f2f2f2
    >img 
      width 100%
      height 100%
      border-radius 50%
  .person-name
    margin-bottom 1.5rem
    font-size $font-size-big
  .person-id
    margin-bottom 10vh
    .person-id-word
      >span 
        margin-left .3rem
  .person-setting
    position absolute
    top 5vw
    right 5vw